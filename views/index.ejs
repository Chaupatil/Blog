<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <header>
        <h1>My Blog</h1>
    </header>
    <main>
        <a href="/create" class="btn">Create New Post</a>
        <h2>Posts</h2>
        <ul>
            <% posts.forEach((post, index) => { %>
                <li>
                    <h3><%= post.title %></h3>
                    <p><%= post.content %></p>
                    <a href="/edit/<%= index %>" class="btn">Edit</a>
                    <form action="/delete/<%= index %>" method="POST" style="display:inline;">
                        <button type="submit" class="btn">Delete</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </main>
</body>
</html>
